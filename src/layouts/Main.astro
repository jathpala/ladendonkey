---
import "/src/styles/main.scss"
import { Image } from "astro:assets"
import logo from "$/static/laden-donkey.png"
---

<!doctype html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />

    <link rel="icon" type="image/svg+xml" href="/favicon.png" />

    <title>Laden Donkey</title>
</head>

<body>
    <header>
        <a href="/" class="header">
            <Image src={logo} alt="Cartoon image of a heavily ladened donkey" class="logo"/>
            <h1>Laden Donkey</h1>
        </a>

        <nav>
            <ul>
                <li><a href="/archive">Archive</a></li>
                <li><a href="/links">Links</a></li>
            </ul>
        </nav>
    </header>
    <slot />
</body>

</html>

<style lang="scss">
@use "$/styles/theme" as *;

body {
    padding: 1rem;
}

header {
    display: flex;
    align-items: center;
    gap: 4rem;
    margin-bottom: 2rem;

    a.header {
        display: flex;
        align-items: center;
        gap: 2rem;
        text-decoration: none;
    }

    .logo {
        height: 5rem;
        width: 5rem;
        border-radius: 0.8em;
    }

    h1 {
        color: $brand-color;
        font-family: $brand-font;
        font-size: 2.2rem;
    }

    nav {
        font-family: $heading-font;
        font-size: 1.2em;
        font-weight: 500;
        color: $accent-color;
        ul {

            display: flex;
            list-style-type: none;
            gap: 1.5em;
        }
    }
}
</style>
